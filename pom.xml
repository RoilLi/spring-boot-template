<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.4.2</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	<groupId>com.example</groupId>
	<artifactId>spring-boot-template</artifactId>
	<version>0.0.1</version>
	<name>template</name>
	<packaging>pom</packaging>
	<description>Template project for Spring Boot</description>

	<properties>
		<java.version>11</java.version>
		<template.version>0.0.1</template.version>
		<template.domain.version>0.0.1</template.domain.version>
		<template.infrastructure.version>0.0.1</template.infrastructure.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.example</groupId>
				<artifactId>domain</artifactId>
				<version>${template.domain.version}</version>
			</dependency>
			<dependency>
				<groupId>com.example</groupId>
				<artifactId>infrastructure</artifactId>
				<version>${template.infrastructure.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<modules>
		<module>api</module>
		<module>batch</module>
		<module>domain</module>
		<module>infrastructure</module>
	</modules>
</project>
